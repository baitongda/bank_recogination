/**index.wxss**/

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.obtain-img-container {
  margin-top: 40rpx;
  height: auto;
  width: 100%;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  transition: all 300ms ease;
  box-sizing: border-box;
  
}

.obtain-img-button {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.obtain-img-button-text {
  width: auto;
  line-height: 52px;
  font-size: 34rpx;
  color: #007aff;
}

.img-container {
  width: 100%;
  height: 400rpx;
  padding: 20rpx 20rpx 20rpx 0;
  display: flex;
  align-content: center;
  justify-content: center;
  box-sizing: border-box;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
}

.image{
  width: 100%;
  height: auto;
}

